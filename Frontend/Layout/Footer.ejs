<!-- FULL SCREEN API UNTUK MAP -->
 <script>
document.getElementById("fullscreenBtn").addEventListener("click", function() {
    let mapEl = document.getElementById("map");

    if (!document.fullscreenElement) {
        // masuk ke fullscreen
        if (mapEl.requestFullscreen) {
            mapEl.requestFullscreen();
        } else if (mapEl.webkitRequestFullscreen) { /* Safari */
            mapEl.webkitRequestFullscreen();
        } else if (mapEl.msRequestFullscreen) { /* IE11 */
            mapEl.msRequestFullscreen();
        }
    } else {
        // keluar dari fullscreen
        if (document.exitFullscreen) {
            document.exitFullscreen();
        } else if (document.webkitExitFullscreen) {
            document.webkitExitFullscreen();
        } else if (document.msExitFullscreen) {
            document.msExitFullscreen();
        }
    }
});
</script>


<!-- MAP JS -->
<script>
  // Inisialisasi peta (posisi awal di tengah Indonesia)
  var map = L.map('map').setView([-6.2, 106.8], 5); // Jakarta

  // Tambahkan tile map (OpenStreetMap gratis)
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
  }).addTo(map);

  // Fungsi buat nambahin kapal
  function addShip(lat, lng, name) {
    var shipIcon = L.icon({
      iconUrl: 'https://cdn-icons-png.flaticon.com/512/77/77521.png', // ikon kapal (png)
      iconSize: [32, 32], 
      iconAnchor: [16, 32],
      popupAnchor: [0, -32]
    });

    var marker = L.marker([lat, lng], { icon: shipIcon }).addTo(map);
    marker.bindPopup("<b>" + name + "</b><br>Lat: " + lat + "<br>Lng: " + lng);
  }

  // Contoh data kapal
  addShip(-0.523232, 117.085750, "Kapal A");   // Jakarta
  addShip(-3.3, 114.6, "Kapal B");   // Banjarmasin
  addShip(1.4, 124.8, "Kapal C");    // Manado
</script>


<!-- JS SIDEBAR -->
<script>
  function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      const windowWidth = window.innerWidth;

      if (windowWidth < 992) {  // hanya toggle untuk layar < lg
          sidebar.classList.toggle("expanded");
          sidebar.classList.toggle("collapsed");
      }
  }

  // Optional: saat resize, otomatis set sidebar expanded untuk lg+
  window.addEventListener("resize", function() {
      const sidebar = document.getElementById("sidebar");
      if (window.innerWidth >= 992) {
          sidebar.classList.add("expanded");
          sidebar.classList.remove("collapsed");
      } else {
          sidebar.classList.remove("expanded");
          sidebar.classList.add("collapsed");
      }
  });

  // Optional: jalankan saat pertama load
  window.addEventListener("DOMContentLoaded", function() {
      const sidebar = document.getElementById("sidebar");
      if (window.innerWidth >= 992) {
          sidebar.classList.add("expanded");
          sidebar.classList.remove("collapsed");
      } else {
          sidebar.classList.remove("expanded");
          sidebar.classList.add("collapsed");
      }
  });
</script>
