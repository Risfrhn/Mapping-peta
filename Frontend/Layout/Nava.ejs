<style>
    .sidebar {
        position: fixed;
        bottom: 20px;
        left: 20px;
        width: 70px;
        height: 70px;
        background-color: #343a40;
        border-radius: 50%;
        display: flex;
        flex-direction: column-reverse; /* supaya tombol tetap di bawah */
        align-items: center;
        justify-content: flex-start;
        transition: all 0.4s ease;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        color: white;
        z-index: 1050;
    }

    .sidebar.expanded {
        height: 260px;   /* tinggi ke atas */
        width: 70px;     /* tetap sempit */
        border-radius: 40px;
    }

    .sidebar nav {
        display: none;
        flex-direction: column;
        align-items: center;
    }

    .sidebar.expanded nav {
        display: flex;
        margin-bottom: 25px;
    }

    .toggle-btn {
        background: none;
        border: none;
        color: white;
        font-size: 22px;
        cursor: pointer;
    }

    .sidebar.expanded .toggle-btn{
        display: none;
    }

    /* Tooltip styling */
    .nav-link {
        position: relative;
    }

    .nav-link span {
        position: absolute;
        left: 60px;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.8);
        color: white;
        padding: 3px 8px;
        border-radius: 5px;
        white-space: nowrap;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, left 0.3s ease;
        font-size: 14px;
    }

    .nav-link:hover span {
        opacity: 1;
        visibility: visible;
        left: 80px; /* animasi geser keluar */
    }
</style>

<div class="overlay" id="overlay" onclick="closeSidebar()"></div>

<div class="sidebar collapsed" id="sidebar">
  <nav class="nav flex-column gap-3">
    <a href="#" class="nav-link text-white">
      <i class="fas fa-home"></i>
      <span>Home</span>
    </a>
    <a href="#" class="nav-link text-white">
      <i class="fas fa-list"></i>
      <span>Tasks</span>
    </a>
    <a href="#" class="nav-link text-white">
      <i class="fas fa-users"></i>
      <span>Users</span>
    </a>
    <a href="#" class="nav-link text-white">
      <i class="fas fa-cog"></i>
      <span>Settings</span>
    </a>
  </nav>
  <button class="toggle-btn my-auto" onclick="toggleSidebar()">
    <i class="fas fa-bars"></i>
  </button>
</div>


  