<%- include('Layout/Header')%>


<div class="container-fluid p-4">
    <h1>Data Kapal</h1>


    <!-- MAP SECTION -->
    <div id="map" class="rounded-4 mb-3" style="height:400px; background:#ddd;">
        <button id="fullscreenBtn" 
            class="btn btn-primary rounded-circle position-absolute" 
            style="bottom: 15px; right: 15px; width:60px; height:60px; display:flex; align-items:center; justify-content:center;z-index:1000">
            <i class="fa-solid fa-maximize fs-5"></i>
        </button>
    </div>


    


    <!-- TABLE SECTION -->
    <div class="card shadow-sm rounded-4">
        <!-- Header kotak -->
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="row w-100 p-4">
                <div class="col-12 col-lg-6 col-md-6 mb-2 mb-md-0">
                    <button class="btn btn-primary btn-lg ">
                        Tambah Data
                    </button>
                </div>

                <div class="col-12 col-lg-6 col-md-6 mt-3 mt-md-0">
                    <div class="d-flex gap-2">
                        <!-- Search -->
                        <input type="text" class="form-control form-control-lg" placeholder="Search...">
                        <!-- Filter -->
                        <button class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-filter"></i>
                        </button>
                        <!-- Button tambah -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Body kotak -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                        <th scope="col">No</th>
                        <th scope="col">Nama Kapal</th>
                        <th scope="col">Tujuan</th>
                        <th scope="col">Waktu</th>
                        <th scope="col">Status</th>
                        <th scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        <td>1</td>
                        <td>Risky Farhan</td>
                        <td>risky@example.com</td>
                        <td>Risky Farhan</td>
                        <td>risky@example.com</td>
                        <td>
                            <button class="btn btn-sm btn-danger">Informasi Kapal</button>
                        </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    


<%- include('Layout/Footer')%>